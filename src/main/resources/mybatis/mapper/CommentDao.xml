<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hk.TS.dao.CommentDao">
    <resultMap id="commentResultMap" type="Comment">
        <id property="id" column="com_id"/>
        <result property="content" column="com_content"/>
        <result property="targetCommentId" column="com_target_comment_id"/>
        <result property="createTime" column="com_create_time"/>
        <result property="like" column="com_like"/>
        <association property="courseId" javaType="Course">
            <id property="id" column="course_id"/>
            <result property="name" column="course_name"/>
            <result property="info" column="course_info"/>
            <result property="price" column="price"/>
        </association>
        <association property="authorId" javaType="Person">
            <id property="id" column="p_id"/>
            <result property="name" column="p_name"/>
            <result property="age" column="p_age"/>
            <result property="gender" column="p_gender"/>
        </association>
    </resultMap>

    <select id="getById" resultMap="commentResultMap">
        select Comment.*,Course.course_id, Person
        from Comment,Course,Person
        where Comment.com_id = #{id} and Comment.com_target_course_id = Course.course_id and Comment.com_author_id = Person.p_id
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into Comment (com_content, com_target_course_id,com_author_id,com_target_comment_id)
        values
        (#{content}, #{courseId.id}, #{authorId.id}, #{targetCommentId})
    </insert>

    <delete id="deleteById">
        delete from Comment where com_id = #{id}
    </delete>

    <update id="update">
        update Comment set
        com_like=#{like},
        com_content=#{content},
        com_target_course_id=#{courseId.id},
        com_author_id=#{authorId.id},
        com_target_comment_id=#{targetCommentId}
        where com_id=#{id}
    </update>

    <select id="getAllComments" resultMap="commentResultMap">
        select Comment.*,Course.*, Person.* from Comment,Course, Person where Comment.com_target_course_id = Course.course_id and Comment.com_author_id = Person.p_id
    </select>
</mapper>